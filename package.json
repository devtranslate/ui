{
  "name": "@devtranslate/ui",
  "version": "0.0.1",
  "description": "Devtranslate UI Components",
  "main": "dist/index.cjs.js",
  "module": "dist/index.esm.js",
  "types": "dist/index.d.ts",
  "private": false,
  "type": "module",
  "scripts": {
    "prepare": "husky",
    "build": "rollup -c",
    "lint:code": "tsc --noEmit && eslint . && prettier --check .",
    "lint:fix": "tsc --noEmit && eslint --fix . && prettier --write ."
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/devtranslate/ui.git"
  },
  "keywords": [],
  "author": "Larissa Mourullo",
  "license": "MIT",
  "files": [
    "dist"
  ],
  "bugs": {
    "url": "https://github.com/devtranslate/ui/issues"
  },
  "homepage": "https://github.com/devtranslate/ui#readme",
  "peerDependencies": {
    "react": ">=16.8"
  },
  "publishConfig": {
    "registry": "https://npm.pkg.github.com"
  },
  "devDependencies": {
    "@commitlint/cli": "19.8.0",
    "@commitlint/config-conventional": "19.8.0",
    "@rollup/plugin-commonjs": "28.0.3",
    "@rollup/plugin-node-resolve": "16.0.1",
    "@rollup/plugin-typescript": "12.1.2",
    "@types/react": "19.1.0",
    "@typescript-eslint/eslint-plugin": "8.29.0",
    "@typescript-eslint/parser": "8.29.0",
    "commitizen": "4.3.1",
    "eslint": "9.24.0",
    "eslint-config-prettier": "10.1.1",
    "eslint-import-resolver-typescript": "4.3.2",
    "eslint-plugin-import": "2.31.0",
    "eslint-plugin-jsx-a11y": "6.10.2",
    "eslint-plugin-prettier": "5.2.6",
    "eslint-plugin-react": "7.37.5",
    "eslint-plugin-react-hooks": "5.2.0",
    "eslint-plugin-simple-import-sort": "12.1.1",
    "eslint-plugin-unused-imports": "4.1.4",
    "git-cz": "4.9.0",
    "husky": "9.1.7",
    "lint-staged": "15.5.0",
    "prettier": "3.5.3",
    "rollup": "4.39.0",
    "rollup-plugin-dts": "6.2.1",
    "rollup-plugin-peer-deps-external": "2.2.4",
    "rollup-plugin-terser": "7.0.2",
    "tslib": "2.8.1",
    "typescript": "5.8.3"
  },
  "config": {
    "commitizen": {
      "path": "git-cz"
    }
  },
  "lint-staged": {
    ".{ts,tsx}": "eslint --fix",
    ".{ts,tsx,css}": "prettier --write"
  },
  "pre-commit": [
    "npm prettier-format",
    "npm lint"
  ]
}
